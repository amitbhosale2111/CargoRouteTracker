@model IEnumerable<CargoRouteTracker.Models.Customer>
@{
    ViewData["Title"] = "Customer Management";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Customer Management</h1>
        <a href="@Url.Action("Create", "Customers")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add Customer
        </a>
    </div>

    <div class="row">
        @foreach (var customer in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Customer
                                </div>
                                <div class="h6 mb-0 font-weight-bold text-gray-800">@customer.Name</div>
                                <div class="text-xs text-muted">@customer.Email</div>
                                <div class="text-xs text-muted">@customer.PhoneNumber</div>
                                <div class="text-xs text-muted mt-1">
                                    <i class="fas fa-map-marker-alt"></i> @customer.Address
                                </div>
                                <div class="text-xs text-muted">
                                    <i class="fas fa-shipping-fast"></i> @customer.Deliveries.Count delivery(ies)
                                </div>
                                <div class="text-xs text-muted">
                                    <i class="fas fa-calendar"></i> Since @customer.CreatedDate.ToString("MMM yyyy")
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user fa-2x text-gray-300"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <a href="@Url.Action("Details", "Customers", new { id = customer.Id })" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a href="@Url.Action("Edit", "Customers", new { id = customer.Id })" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
            <h4 class="text-gray-500">No customers found</h4>
            <p class="text-gray-400">Add your first customer to get started.</p>
            <a href="@Url.Action("Create", "Customers")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Customer
            </a>
        </div>
    }
</div> 